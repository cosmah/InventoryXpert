doctype html
head
  title People Reports | InventoryXpert
  style.
    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    }
    .container {
    width: 80%;
    margin: 0 auto;
    padding: 20px;
    background-color: #f5f5f5;
    }
    h1 {
    text-align: center;
    color: #006400;
    margin-bottom: 20px;
    }
    ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    text-align: center;
    }
    li {
    margin-bottom: 10px;
    }
    a {
    display: block;
    color: #006400;
    text-decoration: none;
    padding: 10px 15px;
    border: 1px solid #006400;
    border-radius: 5px;
    transition: background-color 0.3s ease;
    }
    a:hover {
    background-color: #006400;
    color: #fff;
    }
