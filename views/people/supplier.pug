doctype html
head
  title Add Supplier
  style.
    body {
    font-family: Arial, sans-serif;
    margin: 20px;
    }
    h1 {
    text-align: center;
    }
    form {
    max-width: 500px;
    margin: 0 auto;
    }
    label {
    display: block;
    margin-top: 10px;
    font-weight: bold;
    }
    input[type="text"] {
    width: 100%;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin-top: 5px;
    margin-bottom: 10px;
    font-size: 16px;
    }
    .submit-btn {
    text-align: center;
    margin-top: 20px;
    }
    .submit-btn input[type="submit"] {
    padding: 10px 20px;
    font-size: 16px;
    background-color: #4CAF50;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    }
    .submit-btn input[type="submit"]:hover {
    background-color: #45a049;
    }
    .abort-button {
      float: right ;
      background-color: #007bff;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
      font-weight: bold;
      text-transform: uppercase;
      transition: background-color 0.3s ease;
    }

    .abort-button:hover {
      background-color: #0056b3;
    }

h1 Add Supplier
  button.abort-button(onclick="window.location.href = '/inventory/addproduct';") Back 
form(name='registration' action='/people/supplier' onsubmit='return validateForm()' method='post')
  div
    label(for='supplierName') Supplier Name:
    input#supplierName(type='text' name='supplierName')
  div
    label(for='supplierContact') Contact Person:
    input#supplierContact(type='text' name='supplierContact')
  div
    label(for='supplierEmail') Email:
    input#supplierEmail(type='text' name='supplierEmail')
  div
    label(for='supplierPhone') Phone Number:
    input#supplierPhone(type='text' name='supplierPhone')
  div
    label(for='supplierAddress') Address:
    input#supplierAddress(type='text' name='supplierAddress')
  .submit-btn
    input(type='submit' value='Add Supplier')
