  input#phone(type='text' name='phone' placeholder="Client's Phone Number" required='')
  br
  label(for='address') Address:
  br
  input#address(type='text' name='address' placeholder="Client's Address" required='')
  br
  label(for='tin') TIN:
  br
  input#tin(type='number' name='tin' placeholder="Client's tin" required='')
  br
  label(for='sr') Sales Representative:
