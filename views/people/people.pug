doctype html
head
  meta(charset='UTF-8')
  title Inventory Xpert
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
  style.
    /* CSS Styles */
    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    }
    .header {
    background-color: #00a98f;
    color: white;
    padding: 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    }
    .logo {
    font-size: 24px;
    font-weight: bold;
    display: flex;
    align-items: center;
    }
    .logo i {
    margin-right: 10px;
    }
    .user-profile {
    font-size: 18px;
    }
    .sidebar {
    background-color: #f0f0f0;
    float: left;
    width: 250px;
    height: 100vh;
    }
    .sidebar ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
    }
    .sidebar li {
    padding: 15px;
    border-bottom: 1px solid #ccc;
    transition: background-color 0.3s ease;
    display: flex;
    align-items: center;
    }
    .sidebar li:hover {
    background-color: #d4d4d4;
    cursor: pointer;
    }
    .sidebar li.active {
    background-color: #00a98f;
    color: white;
    }
    .sidebar li a {
    color: #333;
    text-decoration: none;
    font-size: 16px;
    font-weight: bold;
    display: flex;
    align-items: center;
    }
    .sidebar li a i {
    margin-right: 10px;
    }
    .content {
    margin-left: 250px;
    padding: 20px;
    }
    /* JS Script */
    function setActiveMenuItem(element) {
    const menuItems = document.getElementsByClassName('menu-item');
    for (let i = 0; i < menuItems.length; i++) {
    menuItems[i].classList.remove('active');
    }
    element.classList.add('active');
    }
    /* Additional Styles */
    h1 {
    color: #00a98f;
    font-size: 28px;
    margin-bottom: 20px;
    }
    .people-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
    }
    .people-link {
    background-color: #f0f0f0;
    border: 1px solid #ccc;
    border-radius: 5px;
    color: #333;
    display: flex;
    align-items: center;
    padding: 10px;
    margin-right: 10px;
    margin-bottom: 10px;
    text-decoration: none;
    transition: background-color 0.3s ease;
    }
    .people-link:hover {
    background-color: #d4d4d4;
    }
    .people-link i {
    margin-right: 10px;
    font-size: 24px;
    }
    .people-link span {
    font-weight: bold;
    }
header.header
  .logo
    i.fas.fa-users
    span People Management
  span.user-profile John Doe
.sidebar
  ul
    li.menu-item.active(onclick='setActiveMenuItem(this)')
      a(href='/welcome')
        i.fas.fa-chart-line
        span Dashboard
    li.menu-item(onclick='setActiveMenuItem(this)')
      a(href='/inventory/products')
        i.fas.fa-cubes
        span Products
    li.menu-item(onclick='setActiveMenuItem(this)')
      a(href='/inventory/products')
        i.fas.fa-clipboard-list
        span Orders
    li.menu-item(onclick='setActiveMenuItem(this)')
      a(href='/reports/reports')
        i.fas.fa-chart-bar
        span Reports
    li.menu-item(onclick='setActiveMenuItem(this)')
      a(href='/people/people')
        i.fas.fa-users
        span People
.content
  h1 People
  .people-links
    a.people-link(href='/customers')
      i.fas.fa-user
      span Customers
    a.people-link(href='/employees')
      i.fas.fa-users
      span Employees
    a.people-link(href='/suppliers')
      i.fas.fa-truck
      span Suppliers
    // Additional links can be added here
  // Additional content goes here
script.
  // JavaScript code goes here
  function setActiveMenuItem(element) {
  const menuItems = document.getElementsByClassName('menu-item');
  for (let i = 0; i < menuItems.length; i++) {
  menuItems[i].classList.remove('active');
  }
  element.classList.add('active');
  }
