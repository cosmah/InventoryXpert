doctype html
head
  title Payment Form
  //- Global Styles
style.
  body {
    font-family: Arial, sans-serif;
    background-color: #f5f5f5;
  }

//- Form Styles
style.
  /* Add your custom styles here */

  /* Form Styles */
  h1 {
    color: green;
  }

  form#paymentForm {
    width: 400px;
    margin: 0 auto;
    background-color: #ffffff;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  div {
    margin-bottom: 10px;
  }

  label {
    display: block;
    font-weight: bold;
  }

  input[type='text'],
  input[type='number'],
  select {
    width: 100%;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  button[type='submit'] {
    background-color: green;
    color: #ffffff;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 4px;
    cursor: pointer;
  }

  button[type='submit']:hover {
    background-color: #006400;
  }

//- Form Markup
h1(style='color: green;') Payment Form

form#paymentForm
  div
    label(for='customerName') Customer Name:
    input#customerName(type='text' required='')
  div
    label(for='receipts') Open Receipts:
    select#receipts(required='')
      option(value='' disabled='' selected='') Select an open receipt
  div
    label(for='amount') Amount Received:
    input#amount(type='number' required='')
  div
    button(type='submit') Submit Payment


script.
  // Fetch customer name suggestions based on input
  document.getElementById("customerName").addEventListener("input", function(event) {
  var customerName = event.target.value;
  // Clear previous receipt options
  var receiptSelect = document.getElementById("receipts");
  while (receiptSelect.firstChild) {
  receiptSelect.removeChild(receiptSelect.firstChild);
  }
  // Fetch open receipts using Fetch API
  fetch("https://example.com/api/receipts?customerName=" + encodeURIComponent(customerName))
  .then(function(response) {
  if (!response.ok) {
  throw new Error("Failed to fetch open receipts");
  }
  return response.json();
  })
  .then(function(data) {
  // Populate receipt options in the select element
  data.forEach(function(receipt) {
  var option = document.createElement("option");
  option.value = receipt.id;
  option.textContent = "Receipt #" + receipt.id;
  receiptSelect.appendChild(option);
  });
  })
  .catch(function(error) {
  console.error(error);
  });
  });
  // Handle form submission
  document.getElementById("paymentForm").addEventListener("submit", function(event) {
  event.preventDefault(); // Prevent the form from submitting
  var selectedReceipt = document.getElementById("receipts").value;
  var amountReceived = document.getElementById("amount").value;
  // Perform necessary actions with the selected receipt and amount received
  // Here, you can add your custom logic to handle the payment data as per your requirements.
  // For this example, we'll just log the data to the console.
  console.log("Selected Receipt:", selectedReceipt);
  console.log("Amount Received:", amountReceived);
  // Clear form fields after submission
  document.getElementById("customerName").value = "";
  document.getElementById("receipts").value = "";
  document.getElementById("amount").value = "";
  });
