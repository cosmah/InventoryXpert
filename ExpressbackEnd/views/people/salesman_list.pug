    function deleteProduct(productId) {
      fetch(`/products/${productId}`, {
        method: 'DELETE'
      })
      .then(response => response.json())
      .then(data => {
        console.log(data);
        // Remove the deleted row from the table
        const row = document.querySelector(`tr[data-product-id="${productId}"]`);
        row.remove();
      })
      .catch(error => {
        console.error(error);
        // Handle error here
      });
    }